extends base

block content 
    main.main 
        .cards.cards--tours
            each tour in tours 
                .card
                    .card__header
                        .card__picture
                            .card__layout
                            img.card__header__image(src= `/images/tours/${tour.imageCover}` alt=`${tour.slug}`)
                        .card__header__heading
                            span= tour.name 
                    .card__body
                        span.card__body__subheading= `${tour.difficulty} ${tour.duration}-day tour`
                        p.card__body__desc= tour.summary 
                        .card__body__details
                            .card__body__details__loc
                                i.fa-solid.fa-location-dot
                                span= tour.startLocation.description
                            .card__body__details__cal
                                i.fa-regular.fa-calendar
                                - date = tour.startDates[0].toLocaleString('en-US',{month:'long',year:'numeric'})
                                span= date 
                            .card__body__details__flag
                                i.fa-regular.fa-flag
                                span= `${tour.locations.length} stops`
                            .card__body__details__users
                                i.fa-regular.fa-user
                                span= `${tour.maxGroupSize} people`
                    .card__footer
                        .card__footer__details
                            span.card__footer__details__price
                                span.price= `$${tour.price}`
                                span  per person
                            span.card__footer__details__rate
                                span= `${tour.ratingsAverage}`
                                | 
                                span=  `rating (${tour.ratingsQuantity})`
                        a.card__footer__btn.card__footer__btn--hover(href=`/tour/${tour.slug}`) details    
