extends baseEmail 
block content 
    // START CENTERED WHITE CONTAINER
    span.preheader This is preheader text. Some clients will show this text as a preview.
    table.main(role="presentation", border="0", cellpadding="0", cellspacing="0")
        // START MAIN CONTENT AREA
        tr
            td.wrapper
                p Hi #{firstName}
                p #{subject}
                table.btn.btn-primary(role="presentation", border="0", cellpadding="0", cellspacing="0")
                    tbody
                        tr
                            td(align="left")
                                table(role="presentation", border="0", cellpadding="0", cellspacing="0")
                                    tbody
                                        tr
                                            td
                                                a(href=`${url}`, target="_blank") reset your password
                p forgot password? submit patch request for #{url} with new password and confirm password if you didn't forget your password ignore it 
                p Good luck! Hope it works.
        // END MAIN CONTENT AREA
        // START FOOTER
        .footer
            table(role="presentation", border="0", cellpadding="0", cellspacing="0")
                tr
                    td.content-block
                        span.apple-link natours family
                        br
                tr
                    td.content-block.powered-by
